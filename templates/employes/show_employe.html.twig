{# template/employes/show_employe.html.twig #}

{% extends 'base.html.twig' %}
{%  block title %}Affichage d'un employé {% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Gestion des congés </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('new_employe') }}">Nouvel Employé</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('show_all_employes') }}">Lister les employés</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_demande_crud_index') }}">Demandes</a>
      </li>
    </ul>
  </div>
</nav>

<h1>Voici l'employé choisi: </h1>

<p>Nom: {{ employe.nom }} </p>
<p>Prenom: {{ employe.prenom }} </p>
<p>Email: {{ employe.email }} </p>
<p>Type de contrat: {{ employe.typeContrat }} </p>
<p>Date d'embauche: {{ employe.dateEmbauche|date("d/m/Y") }} </p>

{% endblock %}
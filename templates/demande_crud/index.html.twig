{% extends 'base.html.twig' %}

{% block title %}Demande index{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="/css/style.css">{% endblock %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Gestion des congés </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('new_employe') }}">Nouvel Employé</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('show_all_employes') }}">Lister les employés</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_demande_crud_index') }}">Demandes</a>
      </li>
    </ul>
  </div>
</nav>
    <h1>Liste des Demandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Commentaire</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demande in demandes %}
            <tr>
                <td>{{ demande.id }}</td>
                <td>{{ demande.type }}</td>
                <td>{{ demande.dateDebut ? demande.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ demande.dateFin ? demande.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ demande.commentaire }}</td>
                <td>{{ demande.statut }}</td>
                <td>
                    <a href="{{ path('app_demande_crud_show', {'id': demande.id}) }}">show</a>
                    <a href="{{ path('app_demande_crud_edit', {'id': demande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_demande_crud_new') }}">Create new</a>
{% endblock %}

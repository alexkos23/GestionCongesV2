{% extends 'base.html.twig' %}

{% block title %}Demandev2 index{% endblock %}
{% block stylesheets %} 

<link rel="stylesheet" href="/css/style.css"> {% endblock %}
{% block body %}
   <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Gestion des congés </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('new_employe') }}">Nouvel Employé</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('show_all_employes') }}">Lister les employés</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_demandev2_index') }}">Demandes</a>
      </li>
    </ul>
  </div>
</nav>
    <h1>Liste des Demandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type de Congé</th>
                <th>Employé</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Commentaire</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demandev2 in demandev2s %}
            <tr>
                <td>{{ demandev2.id }}</td>
                <td>{{ demandev2.typeDemande }}</td>
                <td>{{ demandev2.nomEmploye }}</td>
                <td>{{ demandev2.dateDebut ? demandev2.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ demandev2.dateFin ? demandev2.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ demandev2.commentaire }}</td>
                <td>{{ demandev2.statut }}</td>
                <td>
                    <a href="{{ path('app_demandev2_show', {'id': demandev2.id}) }}">Voir</a>
                    <a href="{{ path('app_demandev2_edit', {'id': demandev2.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_demandev2_new') }}">Nouvelle demande</a>
{% endblock %}
